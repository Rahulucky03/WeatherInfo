<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textInputStyle">@style/MyThemeOverlayOutlined</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--Text Input Layout Outbox-->
    <!--Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu-->
    <style name="MyThemeOverlayOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--<item name="android:textColorHint">@color/gray_light_200</item>--> <!--Jab TextInputLayout Focusable nhi ho-->
        <item name="hintTextAppearance">?textAppearanceCaption</item>
        <!--<item name="hintTextColor">@color/gray_light_300</item>--> <!--Jab TextInputLayout Focusable ho-->
        <item name="editTextStyle">@style/MyTextInputEditText_outlinedBox</item>
        <!--<item name="boxStrokeColor">@color/bg_stroke_color</item>-->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <!--<item name="endIconMode">clear_text</item>-->
    </style>
    <!--Text Input Layout Outbox-->

    <!--Text Input Edit Text-->
    <style name="MyTextInputEditText_outlinedBox" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="hintTextAppearance">?textAppearanceCaption</item>
        <!--<item name="hintTextColor">@color/gray_light_300</item>-->
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
        <!--<item name="endIconMode">clear_text</item>-->
    </style>
    <!--Text Input Edit Text-->


    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorPrimary</item>
        <!--<item name="textAllCaps">false</item>-->
        <item name="android:textAppearance">?textAppearanceButton</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="DefaultTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DefaultTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>